{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "pnpm install --frozen-lockfile && pnpm run build"
    },
    "deploy": {
        "startCommand": "node dist/src/main",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}